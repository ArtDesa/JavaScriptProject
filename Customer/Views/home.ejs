        .card {
            width: 211px;
            background: white;
            color: #fff;
            width: 40%;
            margin-left: 2%;
        }

        .card-img {
            width: 100%;
            height: 15vw;
            object-fit: cover;
        }

        .card.headingh1 {
            text-align: center;
            color: rgb(255, 255, 255);
            text-shadow: 2px 2px #28346c;
        }

        .max {
            color: rgb(166, 226, 236);
            font-weight: bold;
        }

        .min {
            color: rgb(104, 155, 241);
            font-weight: bold;
        }

        .day {
            color: rgb(234, 255, 124);
        }

        .humid {
            color: rgb(44, 112, 105);
        }

        .topTemp {
            color: white;
            font-weight: bold;
        }

        .card-text {
            color: black;
            position: sticky;
        }
    </style>

    <!-- Weather report section -->
    <style>
        .header {
            background-color: blue !important;
            background: center center / cover no-repeat;
